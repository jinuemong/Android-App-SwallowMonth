<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_type4"
    tools:context=".IntroActivity">
    <TextView
        android:id="@+id/top_text"
        style="@style/ButtonText_big"
        android:text="@string/swallow_a_month"
        android:textSize="@dimen/item_height_big_text_size_35"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mid_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_big_100"/>
    <TextView
        android:id="@+id/mid_text"
        style="@style/ButtonText_big"
        android:text="@string/manage_your_month_periodically"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@+id/top_text"
        app:layout_constraintBottom_toTopOf="@+id/main_intro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_big_100"/>
    <ImageView
        android:id="@+id/main_intro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_icon"/>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:backgroundTint="@color/color_type2"
        android:background="@drawable/round_border"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="horizontal"
        android:id="@+id/bottom_intro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_big_100">

        <ImageView
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/main_icon"
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"/>
        <ImageView
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"/>        <ImageView
        android:layout_margin="@dimen/fab_margin_12dp"
        android:src="@drawable/ic_iconmonstr_bar_chart_thin"
        android:layout_width="@dimen/item_mid_height_30"
        android:layout_height="@dimen/item_mid_height_30"/>
        <ImageView
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_iconmonstr_refresh_7"
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"/>
        <ImageView
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_iconmonstr_user_male_thin"
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"/>
        <ImageView
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/main_icon"
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>