<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_type4"
    android:orientation="vertical"
    tools:context=".IntroActivity">

    <TextView
        android:id="@+id/top_text"
        style="@style/ButtonText_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_big"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/swallow_a_month"
        android:textSize="@dimen/item_height_big_text_size_35" />

    <TextView
        android:id="@+id/mid_text"
        style="@style/ButtonText_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_big_100"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/manage_your_month_periodically" />

    <ImageView
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/main_intro"
        android:layout_width="@dimen/item_we_300"
        android:layout_height="@dimen/item_we_300"
        android:src="@drawable/main_icon" />

    <LinearLayout
        android:id="@+id/bottom_intro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_big_80"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/color_type2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/main_icon" />

        <ImageView
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageView
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_iconmonstr_bar_chart_thin" />

        <ImageView
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_iconmonstr_refresh_7" />

        <ImageView
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"
            android:layout_margin="@dimen/fab_margin_12dp"
            android:src="@drawable/ic_iconmonstr_user_male_thin" />

        <ImageView
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/main_icon" />
    </LinearLayout>
</LinearLayout>