<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment.FragmentUserUI">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_big_180"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="@dimen/item_height_big"
                android:layout_height="match_parent"
                android:background="@drawable/rect_border"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/item_height_big_100"
                    android:layout_height="@dimen/item_height_big_100"
                    android:layout_margin="@dimen/main_margin" />

                <View
                    style="@style/LineView1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/item_height_mid_text_size"
                    android:textStyle="bold"
                    tools:text="username" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="@dimen/item_height_big"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <TextView
                    style="@style/ButtonText"
                    android:layout_width="@dimen/item_height"
                    android:layout_height="@dimen/item_mid_height"
                    android:layout_margin="@dimen/main_margin"
                    android:text="@string/edit_profile" />

                <TextView
                    style="@style/ButtonText"
                    android:layout_width="@dimen/item_height"
                    android:layout_height="@dimen/item_mid_height"
                    android:layout_margin="@dimen/main_margin"
                    android:text="@string/logout_profile" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:backgroundTint="@color/color_type2"
            android:gravity="center"
            android:textSize="@dimen/item_height_big_text_size"
            android:text="goals"
            android:textStyle="bold"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/round_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mid_2_height"/>


    </LinearLayout>
</FrameLayout>