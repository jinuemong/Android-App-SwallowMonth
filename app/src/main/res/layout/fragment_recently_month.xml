<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border"
    android:padding="@dimen/item_mid_height_20dp"
    android:clickable="true"
    android:focusable="true"
    tools:context=".DetailView.RecentlyMonthFragment">
    <TextView
        android:layout_margin="@dimen/main_margin_10"
        android:textStyle="bold"
        android:textSize="@dimen/item_height_mid_text_size"
        android:text="New month has begun! \n   View recent data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/record_box"
        android:layout_margin="@dimen/main_margin_10"
        layout="@layout/item_month_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/main_margin_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_margin="@dimen/main_margin"
            android:background="@drawable/round_border"
            android:padding="@dimen/main_margin_10"
            android:text="View Records"
            android:id="@+id/commit_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:text="View Home"
            android:layout_margin="@dimen/main_margin"
            android:background="@drawable/round_border"
            android:padding="@dimen/main_margin_10"
            android:gravity="center"
            android:id="@+id/not_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>