<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- calendar month 내부 뷰  -->

    <LinearLayout
        android:id="@+id/slide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_border_two"
        android:orientation="vertical">

        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginTop="10dp"
            android:background="#777" />

        <TextView
            android:id="@+id/todo_top_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:textSize="@dimen/item_height_big_text_size"
            android:textStyle="bold"
            tools:text="Add Task" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/todo_edit_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height"
            android:layout_margin="@dimen/main_margin"
            android:layout_weight="5"
            android:background="@drawable/round_border"
            android:hint="@string/typing_in_your_task"
            android:padding="@dimen/main_margin" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/todo_add_button"
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:src="@drawable/ic_iconmonstr_check_mark_13" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>