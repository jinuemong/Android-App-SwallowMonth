<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- calendar month 내부 뷰  -->

    <LinearLayout
        android:id="@+id/slide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_border_two"
        >
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:layout_marginTop="10dp"
            android:background="#777" />

        <TextView
            android:id="@+id/todo_top_text"
            android:layout_marginStart="@dimen/item_mid_height_20dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/item_height_big_text_size"
            tools:text="xx년 x월 x일 일정"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/todo_view_all_goals"
                android:padding="@dimen/main_margin"
                style="@style/ButtonText_big"
                android:text="view all goals"
                android:layout_marginEnd="@dimen/item_mid_height_30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/todo_add_routine"
                android:padding="@dimen/main_margin"
                style="@style/ButtonText_big"
                android:text="add routine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal">
            <EditText
                android:padding="@dimen/main_margin"
                android:hint="할 일을 작성하세요"
                android:background="@drawable/round_border"
                android:id="@+id/todo_edit_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_height"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/todo_add_button"
                    android:layout_width="@dimen/item_height"
                    android:layout_height="@dimen/item_height"
                    android:src="@drawable/ic_add_box_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/color_type2"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="vertical"
            android:id="@+id/current_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="@dimen/main_margin"
                android:text="recently add"
                style="@style/ButtonText_big"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todo_recently_list"
                tools:listitem="@layout/item_to_do_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>