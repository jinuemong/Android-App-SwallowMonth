<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskRoutineFragment.SelectLevelFragment">


    <LinearLayout
        android:padding="@dimen/main_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/fab_margin"
            android:textColor="@color/color_type1"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/item_height_big_text_size_35"
            android:text="@string/select_level"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"/>

        <LinearLayout
            android:id="@+id/level_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_big_80"
            android:layout_margin="@dimen/main_margin"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/level_big"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_2_height"
                android:text="level 1" />

            <TextView
                style="@style/level_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_height_30"
                android:text="about 0 to 10 minutes" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_big_80"
            android:layout_margin="@dimen/main_margin"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/level_big"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_2_height"
                android:text="level 2" />

            <TextView
                style="@style/level_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_height_30"
                android:text="about 10 to 60 minutes" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/main_margin"
            android:gravity="center"
            android:background="@drawable/round_border"
            android:id="@+id/level_3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_big_80">
            <TextView
                android:text="level 3"
                style="@style/level_big"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_2_height"/>
            <TextView
                android:text="about 1 to 3 hours"
                style="@style/level_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_height_30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/main_margin"
            android:gravity="center"
            android:background="@drawable/round_border"
            android:id="@+id/level_4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_big_80">
            <TextView
                android:text="level 4"
                style="@style/level_big"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_2_height"/>
            <TextView
                android:text="about 3 to 6 hours"
                style="@style/level_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_height_30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/main_margin"
            android:gravity="center"
            android:background="@drawable/round_border"
            android:id="@+id/level_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_big_80">
            <TextView
                android:text="level 5"
                style="@style/level_big"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_2_height"/>
            <TextView
                android:text="more than 6 hours"
                style="@style/level_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_mid_height_30"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>