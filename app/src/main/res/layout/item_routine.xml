<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_big_100">

    <LinearLayout
        android:background="@drawable/round_border"
        android:id="@+id/task_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_margin"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/main_margin"
        android:paddingEnd="@dimen/fab_margin_12dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mid_40_height">
            <ImageView
                android:layout_marginStart="@dimen/main_margin"
                android:layout_marginEnd="@dimen/main_margin"
                android:src="@drawable/ic_baseline_event_repeat_24"
                android:layout_width="@dimen/item_mid_height_30"
                android:layout_height="@dimen/item_mid_height_30"/>
            <TextView
                style="@style/TextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/routine_task"
                android:textSize="@dimen/item_height_big_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/fab_margin_12dp"
            android:layout_marginEnd="@dimen/fab_margin_12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="@dimen/fab_margin"
                android:id="@+id/routine_text"
                style="@style/TextView1"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                tools:text="your task"
                android:textSize="@dimen/item_height_mid_text_size"
                android:textStyle="bold" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginStart="@dimen/main_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/routine_icon"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    android:layout_width="@dimen/item_mid_height_30"
                    android:layout_height="@dimen/item_mid_height_30"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>