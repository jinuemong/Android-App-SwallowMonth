<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_type4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.SwallowMonthJM.LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_mid_40_height"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/item_mid_50_height"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/main_margin_10"
            android:src="@drawable/main_icon" />

        <TextView
            android:fontFamily="@font/myyeongnamnu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_mid_height_30"
            android:text="@string/swallow_month"
            android:textSize="@dimen/item_height_double_big_text_size" />
    </LinearLayout>

    <EditText
        android:textStyle="bold"
        android:id="@+id/user_name_input"
        android:layout_width="@dimen/item_we_300"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/put_id_mess"
        android:textSize="@dimen/item_height_big_21_text_size" />

    <EditText
        android:textStyle="bold"
        android:id="@+id/user_password_input"
        android:layout_width="@dimen/item_we_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_mid_height_20dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="@string/put_pass_mess"
        android:textSize="@dimen/item_height_big_21_text_size" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/auto_login_check_box"
            android:layout_width="@dimen/item_mid_height_30"
            android:layout_height="@dimen/item_mid_height_30"/>
        <TextView
            android:layout_marginStart="@dimen/main_margin"
            android:text="@string/check_for_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_mid_height_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:backgroundTint="@color/color_type3"
            style="@style/ButtonText"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_mid_40_height"
            android:text="@string/login_mess" />

        <android.widget.Button
            style="@style/ButtonText"
            android:backgroundTint="@color/color_type3"
            android:id="@+id/insert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_mess"/>
    </LinearLayout>
</LinearLayout>